@{    
    var notification = TempData["Notification"] != null ? (TempData["Notification"] as EcommerceDemo.Models.Model.AlertNotificationModel) : new EcommerceDemo.Models.Model.AlertNotificationModel();
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    

    @RenderSection("styles", required: false)    

    <link href="~/Content/Plugin/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <script src="~/Content/Plugin/jquery/dist/jquery.min.js"></script>
    <script src="~/Content/Plugin/jquery-ui/jquery-ui.min.js"></script>
    
    <script src="~/Content/Plugin/bootstrap-toastr/toastr.min.js"></script>
    <link href="~/Content/Plugin/bootstrap-toastr/toastr.min.css" rel="stylesheet" />

    <script type="text/javascript">
        toastr.options = {
            "closeButton": true,
            "debug": false,
            "positionClass": "toast-top-right",
            "onclick": null,
            "showDuration": "100",
            "hideDuration": "300000",
            "timeOut": "300000",
            "extendedTimeOut": "300000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }

        $(document).ready(function () {
            if ('@(notification.Message)' != '') {
                displayToastr('@(notification.Message)', '@(notification.Title)', '@(notification.Type)');
            }
        });

        function displayToastr(msg, title, type) {
            if (type == "Info")
                toastr.info(msg)
            else if (type == "Warning")
                toastr.warning(msg)
            else if (type == "Success")
                toastr.success(msg, title)
            else if (type == "Error")
                toastr.error(msg, title)
        }
    </script>


    @RenderSection("scripts", required: false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Demo Application", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            @*<div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>                
            </div>*@
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Demo Application</p>
        </footer>
    </div>

    <script src="~/Content/Plugin/jquery/dist/jquery.min.js"></script>
    <script src="~/Content/Plugin/jquery-ui/jquery-ui.min.js"></script>

    <script src="~/Content/Plugin/bootstrap-toastr/toastr.min.js"></script>
    <link href="~/Content/Plugin/bootstrap-toastr/toastr.min.css" rel="stylesheet" />

    <!-- DataTables -->
    <script src="~/Content/Plugin/datatables.net/js/jquery.dataTables.min.js"></script>    
    <script src="~/Content/Plugin/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
